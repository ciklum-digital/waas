{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@waas/core": ["packages/core/src/modules/waas/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
